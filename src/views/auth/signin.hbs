<link rel="stylesheet" href="/css/sing.css">
<div class="row">
  <div class="col-md-4 mx-auto">
    <div class="card">
      <div class="card-header text-center pt-5">
        <h1 class="h4 text-white">
          Cuenta de Ingreso
        </h1>
      </div>
      <img
        class="rounded-circle mx-auto d-block logo m-4"
        src="/img/logo.png"
        alt="Logo"
      />
      <div class="card-body">
        <form action="/auth/signin" method="POST">
          <div class="mb-3">
            <label for="email">Email:</label>
            <input
              type="email"
              class="form-control"
              name="email"
              placeholder="Email"
              autofocus
            />
          </div>
          <div class="mb-3">
            <label for="passswore">Password:</label>
            <input
              type="password"
              class="form-control"
              name="password"
              placeholder="Password"
            />
          </div>
          <center><button class="btn-block">
            Iniciar sesión
          </button></center>
        </form>
      </div>

      <p class="text-center">¿No tienes una cuenta? <a href="/auth/signup" class="text-info">Registrar</a></p>
    </div>
  </div>
</div>